<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title dir="ltr">Pico - {% block title %}The Internet underbelly Search Engine{% endblock %}</title>

    <meta name="viewport" content="width=device-width">

    {% block stylesheets %}
        <link type="text/css" rel="stylesheet" href="/skins/default.css" />
    {% endblock %}
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
{% block logo %}
    <div id="logo">
            <a href="{{ path('OfdanSearchBundle_homepage') }}"><img src="/logos/{{ random(19)+1 }}.png" alt="pico" border="0" /></a>
    </div>
    <br />
{% endblock %}

{% block search %}{% endblock %}
{% block body %}{% endblock %}

{% block navigation %}
    <div id="base">
            <a href="{{ path('OfdanSearchBundle_about') }}">About</a>
            -
            <a href="{{ path('OfdanSearchBundle_license') }}">License</a>
            -
            <a href="{{ path('OfdanSearchBundle_download') }}">Download</a>
            -
            <a href="{{ path('OfdanSearchBundle_suggest') }}">Suggest Site</a>
            -
            <a href="{{ path('OfdanSearchBundle_statistics') }}">Statistics</a>
            -
            <a href="{{ path('OfdanSearchBundle_spy') }}">Spy</a>
            -
            <a href="{{ path('OfdanSearchBundle_words') }}">Words</a>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="http://www.google-analytics.com/urchin.js" type="text/javascript"> </script>
    <script type="text/javascript">
            _uacct = "UA-486690-3";
            urchinTracker();
    </script>
{% endblock %}
</body>
</html>
